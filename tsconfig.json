{
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "tests",
    "docs",
    "_archive",
    "tasks"
  ],
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    
    "allowJs": true,
    "checkJs": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "types",
    
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    
    "types": ["node"]
  }
}
